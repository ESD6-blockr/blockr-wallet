{
  "name": "blockr-wallet",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/main.js",
  "scripts": {
    "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "npm run build-main && npm run build-renderer",
    "start-renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
    "dev": "cross-env START_HOT=1 npm run start-renderer-dev",
    "prestart": "npm run build",
    "start": "electron .",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "lint:fix": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json --fix",
    "precommit": "lint-staged",
    "test": "jest --collectCoverage || exit 0",
    "pretest:e2e": "npm run build",
    "test:e2e": "jest '(\\/test\\/e2e/).*'",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{js,ts,tsx,json,css,scss,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.+\\.spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
    }
  },
  "build": {
    "productName": "Blockr Wallet",
    "appId": "org.blockr.wallet",
    "mac": {
      "category": "blockr.wallet.blockchain.wallet"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:ESD6-blockr/blockr-wallet.git"
  },
  "author": {
    "name": "Roel van den Boom",
    "email": "roelvdboom@gmail.com"
  },
  "license": "SEE LICENSE",
  "bugs": {
    "url": "https://github.com/ESD6-blockr/blockr-wallet"
  },
  "homepage": "https://github.com/ESD6-blockr/blockr-wallet",
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.0.2",
    "@types/enzyme": "^3.9.2",
    "@types/jest": "^21.1.9",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.5",
    "@types/react-redux": "^6.0.6",
    "@types/react-router": "^4.4.5",
    "@types/react-test-renderer": "^16.0.0",
    "@types/webdriverio": "^4.8.7",
    "@types/webpack-env": "^1.13.3",
    "awesome-typescript-loader": "^5.2.1",
    "cross-env": "^5.1.3",
    "css-loader": "^2.1.1",
    "electron": "^2.0.8",
    "electron-builder": "^20.40.2",
    "electron-devtools-installer": "^2.2.4",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "image-webpack-loader": "^4.6.0",
    "jest": "^24.7.1",
    "jest-junit": "^6.4.0",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.9.2",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-mock-store": "^1.5.3",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "spectron": "^3.8.0",
    "style-loader": "^0.19.1",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "tslint-react": "^3.2.0",
    "typescript": "^3.4.4",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@blockr/blockr-crypto": "^1.0.0-1",
    "@blockr/blockr-logger": "^1.1.0-15",
    "@blockr/blockr-models": "^1.4.0-2",
    "axios": "^0.18.0",
    "history": "^4.9.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-redux-form": "^1.16.13",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.86.0"
  }
}
