{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false, // for electron dialogs
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "suppressExcessPropertyErrors": true,
    "resolveJsonModule": true,
    "isolatedModules": false, // for custom userdatastore
    "noEmit": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": "./src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "*.js"
  ]
}
